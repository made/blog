{% extends '@theme-base/_page.html.twig' %}

{% set configuration = post.configuration.localeList.current %}

{% block content %}
    {% block content_header %}
        <div class="container">
            {% block header %}
                <header class="blog-header py-3">
                    <div class="row flex-nowrap justify-content-between align-items-stretch">
                        <div class="col-4 py-1 d-flex justify-content-start align-items-center">
                            <a class="text-muted" href="#">Subscribe</a>
                        </div>
                        <div class="col-4 text-center">
                            <a class="blog-header-logo text-dark" href="{{ url_for('blog.slug', {
                                'slug': [
                                    locale
                                ]|join('/'),
                            }) }}">
                                Large
                            </a>
                        </div>
                        <div class="col-4 py-1 d-flex justify-content-end align-items-center">
                            <a class="text-muted px-3" href="#" aria-label="Search">
                                <i class="fa fa-search"></i>
                            </a>
                            <a class="btn btn-sm btn-outline-secondary" href="#">Sign up</a>
                        </div>
                    </div>
                </header>
            {% endblock %}

            {% block navigation %}
                {% if categoryList is defined and categoryList is not empty %}
                    <div class="nav-scroller py-1 mb-2">
                        <nav class="nav d-flex justify-content-between">
                            {% for category in categoryList %}
                                <a class="p-2 text-muted" href="{{ url_for('blog.slug', {
                                    'slug': [
                                        locale, 'category', category.id,
                                    ]|join('/'),
                                }) }}">
                                    {{ category.name }}
                                </a>
                            {% endfor %}
                        </nav>
                    </div>
                {% endif %}
            {% endblock %}

            {% block feature %}
            {% endblock %}

            {% block feature_below %}
            {% endblock %}
        </div>
    {% endblock %}

    {% block content_main %}
        <main role="main" class="container">
            <div class="row mt-4">
                {% block side_left %}
                    <div class="col-md-8 blog-main">
                        {% block side_left_inner %}
                        {% endblock %}
                    </div>
                {% endblock %}

                {# TODO: move content out to the actual page #}
                {% block side_right %}
                    <aside class="col-md-4 blog-sidebar">
                        {% block side_right_inner %}
                            <div class="p-4 mb-3 bg-light rounded">
                                <h4 class="font-italic">About</h4>
                                <p class="mb-0">
                                    Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur
                                    purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.
                                </p>
                            </div>

                            <div class="p-4">
                                <h4 class="font-italic">Archives</h4>
                                <ol class="list-unstyled mb-0">
                                    <li><a href="#">March 2014</a></li>
                                    <li><a href="#">February 2014</a></li>
                                    <li><a href="#">January 2014</a></li>
                                    <li><a href="#">December 2013</a></li>
                                    <li><a href="#">November 2013</a></li>
                                    <li><a href="#">October 2013</a></li>
                                    <li><a href="#">September 2013</a></li>
                                    <li><a href="#">August 2013</a></li>
                                    <li><a href="#">July 2013</a></li>
                                    <li><a href="#">June 2013</a></li>
                                    <li><a href="#">May 2013</a></li>
                                    <li><a href="#">April 2013</a></li>
                                </ol>
                            </div>

                            <div class="p-4">
                                <h4 class="font-italic">Elsewhere</h4>
                                <ol class="list-unstyled">
                                    <li><a href="#">GitHub</a></li>
                                    <li><a href="#">Twitter</a></li>
                                    <li><a href="#">Facebook</a></li>
                                </ol>
                            </div>
                        {% endblock %}
                    </aside>
                {% endblock %}
            </div>
        </main>
    {% endblock %}

    {% block content_footer %}
        {% block footer %}
            <footer class="blog-footer">
                <p>Blog template built for <a href="https://getbootstrap.com/">Bootstrap</a> by <a
                            href="https://twitter.com/mdo">@mdo</a>.</p>
                <p>
                    <a href="#">Back to top</a>
                </p>
            </footer>
        {% endblock %}
    {% endblock %}
{% endblock %}
