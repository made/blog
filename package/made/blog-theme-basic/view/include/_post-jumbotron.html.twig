{% set style = style is defined ? style : {} %}
{% set style = {
    'text': 'white',
    'bg': 'dark',
}|merge(style) %}

{% if post is defined %}
    {% set configuration = post.configuration.localeList.current %}

    <div class="jumbotron p-4 p-md-5 text-{{ style.text }} rounded bg-{{ style.bg }}">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic">
                {{ configuration.title }}
            </h1>
            <p class="lead my-3">
                {{ post.content.content|striptags|slice(0, 250) }}...
            </p>

            <p class="lead mb-0">
                <a href="#" class="text-white font-weight-bold">Continue reading...</a>{# TODO: Add link. #}
            </p>
        </div>
    </div>
{% endif %}
